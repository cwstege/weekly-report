html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1")
    meta(name="apple-mobile-web-app-capable" content="yes")
    title Weekly Report Survey

    link(href="http://fonts.googleapis.com/css?family=Montserrat:400,700", rel="stylesheet", type="text/css")
    link(href="http://fonts.googleapis.com/css?family=Karla:400,700,400italic", rel="stylesheet", type="text/css")
    <!-- Stylesheets -->
    link(rel="stylesheet", href="/assets/css/main.css")
  body
    div.report-container
      div.reportHeading
        h1.headingA
          | Hi, #{name}!
        p
          | Thanks for taking a few minutes to fill in your weekly report(s).
      each response in responses
        include ./response-form.jade
    <!-- JavaScript -->
    script(src="/assets/bundle.js")
